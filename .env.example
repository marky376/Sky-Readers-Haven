# Environment Variables Template for Sky Readers Haven
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-to-something-random
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///site.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/sky_readers_haven

# Stripe Configuration (Payment Processing)
# Get your keys from: https://dashboard.stripe.com/test/apikeys
# Test keys start with sk_test_ and pk_test_
# Production keys start with sk_live_ and pk_live_
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (for contact forms and notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=noreply@skyreadershaven.com

# Google Books API (optional - for enhanced book search)
GOOGLE_BOOKS_API_KEY=your-google-books-api-key-here

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-different-from-secret-key

# Session Configuration
SESSION_TYPE=filesystem
PERMANENT_SESSION_LIFETIME=3600

# Application Settings
APP_NAME=Sky Readers Haven
ADMIN_EMAIL=admin@skyreadershaven.com

# Rate Limiting (optional)
RATELIMIT_STORAGE_URL=memory://
